{% block title %}Bet{% endblock %}

{% block body %}
    <h1>Bet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bet.id }}</td>
            </tr>
            <tr>
                <th>IsDraw</th>
                <td>{{ bet.isDraw ? 'Yes' : 'No' }}</td>
