{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <h1>Listes des matches</h1>

    <table class="table" id="gameTable">
        <thead class="thead-light">
            <tr>
                <th data-column="id">ID</th>
                <th data-column="score1">Score1</th>
                <th data-column="score2">Score2</th>
                <th data-column="banner">Banner</th>
                <th data-column="dateMatch">DateMatch</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for game in games %}
                <tr>
                    <td>{{ game.id }}</td>
                    <td>{{ game.score1 }}</td>
                    <td>{{ game.score2 }}</td>
                    <td>
                        <img src="{{ game.banner }}" alt="Banner" style="max-width: 100px;">
                    </td>
                    <td>{{ game.dateMatch ? game.dateMatch|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_game_show', {'id': game.id}) }}" class="btn btn-primary btn-sm">Show</a>
                    </td>
                    
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Pas de matches/td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_game_new') }}" class="btn btn-success">Créér matches</a>

  
{% endblock %}
